{% extends 'includes/layouts/contained.njk' %}
{% from 'components/back-link/macro.njk' import backLink %}
{% from 'components/button/macro.njk' import button %}

{% block body %}
  <div  class="nhsuk-width-container">
    <div class="nhsuk-u-padding-top-5" data-test-id="go-back-link">
      {{ backLink({
        "href": "./",
        "text": "Go back"
      }) }}
    </div>
    <h1 class="nhsuk-u-margin-top-6 nhsuk-u-margin-bottom-4" data-test-id="dfocvc-page-title">{{ title }}</h1>
    <form method="post">
      <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
      <div class="nhsuk-grid-row">
        <fieldset class="nhsuk-fieldset" aria-describedby="dfocvc-hint" data-test-id="dfocvc-fieldset">
          <legend class="nhsuk-heading-l nhsuk-u-font-size-22 nhsuk-grid-column-two-thirds" data-test-id="dfocvc-page-description">
            {{ description }}
          </legend>
          <div class="nhsuk-hint nhsuk-grid-column-two-thirds" id="dfocvc-hint">
            Select all options that are relevant to you.
          </div>

        </fieldset>
      </div>

    </form>
  </div>
{% endblock %}
