{% extends 'includes/layouts/contained.njk' %}
{% from 'components/back-link/macro.njk' import backLink %}
{% from 'components/button/macro.njk' import button %}

{% block body %}
  <div  class="nhsuk-width-container">
    <div class="nhsuk-grid-row">
      <div class="nhsuk-grid-column-two-thirds">
        <div class="nhsuk-u-padding-top-5" data-test-id="go-back-link">
          {{ backLink({
            href: './',
            text: backLinkText
          }) }}
        </div>
        <h1 class="nhsuk-u-margin-top-6 nhsuk-u-margin-bottom-4" data-test-id="compare-page-title">{{ title }}</h1>
        <p class="nhsuk-heading-1 nhsuk-u-font-size-22 nhsuk-u-padding-bottom-5" data-test-id="compare-page-description">{{ description }}</p>
        <div data-test-id="compare-button">
          {{ button({
            "text": compareButtonText,
            "classes": "nhsuk-button--secondary",
            "href": compareButtonHref
          }) }}
        </div>
      </div>
    </div>
  </div>
{% endblock %}