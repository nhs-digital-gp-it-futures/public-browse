{% macro generalPageDescription(titleText, descriptionText) %}
  {% if titleText %}
    <h2 data-test-id="general-page-title" class="nhsuk-u-margin-top-5">{{ titleText }}</h2>
  {% endif %}
  {% if descriptionText %}
    <div data-test-id="general-page-description">
      {% for text in descriptionText %}
      <div class="nhsuk-u-font-size-22 nhsuk-u-margin-top-3">{{ text }}</div>
      {% endfor %}
    </div>
  {% endif %}
{% endmacro %}